<ul>
  <% if ::Refinery::Biographies::Admin::BiographiesController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.biographies_admin_biographies_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_biographies_admin_biography_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::Biographies::Admin::BiographiesController.sortable? && ::Refinery::Biographies::Biography.any? %>
  <li>
    <%= link_to t('.reorder', :what => "Biographies"),
                 refinery.biographies_admin_biographies_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Biographies"),
                 refinery.biographies_admin_biographies_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>

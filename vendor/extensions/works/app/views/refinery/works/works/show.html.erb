<% content_for :body_content_title do %>
  <%= @work.caption %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Caption</h1>
    <p>
      <%=raw @work.caption %>
    </p>
  </section>
  <section>
    <h1>Dimension</h1>
    <p>
      <%=raw @work.dimension %>
    </p>
  </section>
  <section>
    <h1>Year</h1>
    <p>
      <%=raw @work.year %>
    </p>
  </section>
  <section>
    <h1>Picture</h1>
    <p>
      <%= image_fu @work.picture, nil %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="works">
      <% @works.each do |work| %>
        <li>
          <%= link_to work.caption, refinery.works_work_path(work) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>

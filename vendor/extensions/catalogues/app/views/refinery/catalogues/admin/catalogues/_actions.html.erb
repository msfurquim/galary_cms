<ul>
  <% if ::Refinery::Catalogues::Admin::CataloguesController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.catalogues_admin_catalogues_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_catalogues_admin_catalogue_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::Catalogues::Admin::CataloguesController.sortable? && ::Refinery::Catalogues::Catalogue.any? %>
  <li>
    <%= link_to t('.reorder', :what => "Catalogues"),
                 refinery.catalogues_admin_catalogues_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Catalogues"),
                 refinery.catalogues_admin_catalogues_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>

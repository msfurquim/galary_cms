<% content_for :body_content_title do %>
  <%= @catalogue.author %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Author</h1>
    <p>
      <%=raw @catalogue.author %>
    </p>
  </section>
  <section>
    <h1>Caption</h1>
    <p>
      <%=raw @catalogue.caption %>
    </p>
  </section>
  <section>
    <h1>Year</h1>
    <p>
      <%=raw @catalogue.year %>
    </p>
  </section>
  <section>
    <h1>Cover</h1>
    <p>
      <%= image_fu @catalogue.cover, nil %>
    </p>
  </section>
  <section>
    <h1>Attach</h1>
    <p>
      <% if @catalogue.attach.present? %>
        <%= link_to 'attach', @catalogue.attach.url %>
      <% else %>
        attach
      <% end %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="catalogues">
      <% @catalogues.each do |catalogue| %>
        <li>
          <%= link_to catalogue.author, refinery.catalogues_catalogue_path(catalogue) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>

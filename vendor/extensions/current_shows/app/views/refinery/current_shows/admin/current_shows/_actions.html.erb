<ul>
  <% if ::Refinery::CurrentShows::Admin::CurrentShowsController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.current_shows_admin_current_shows_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_current_shows_admin_current_show_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::CurrentShows::Admin::CurrentShowsController.sortable? && ::Refinery::CurrentShows::CurrentShow.any? %>
  <li>
    <%= link_to t('.reorder', :what => "Current Shows"),
                 refinery.current_shows_admin_current_shows_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Current Shows"),
                 refinery.current_shows_admin_current_shows_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>

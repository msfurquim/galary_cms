<% content_for :body_content_title do %>
  <%= link_to @page.custom_slug_or_title, refinery.artists_artists_path %>
<% end %>

<% content_for :body do %>
  <section>
    <h1><%=raw @artist.name %></h1>
    <ul>
      <li><%= link_to "works", refinery.works_works_path()%>
    </ul>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="artists">
      <% @artists.each do |artist| %>
        <li>
          <%= link_to artist.name, refinery.artists_artist_path(artist) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>

<% content_for :body_content_title do %>
  <%= @artist.name %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Name</h1>
    <p>
      <%=raw @artist.name %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="artists">
      <% @artists.each do |artist| %>
        <li>
          <%= link_to artist.name, refinery.artists_artist_path(artist) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
